<div class="container">
  <div>
    <h1>My tasks</h1>
  </div>

  <div>
    <% @tasks.each do |task| %>
      <div class="task-box">
        <p><%= task.completed %></p>
        <h3><%= link_to task.title, task_path(task.id) %></h3>
        <%= link_to "Kill it", task_path(task.id), method: :delete , data: {confirm: "Are you really sure?"}%>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to 'Add new task', new_task_path %>
  </div>
</div>

